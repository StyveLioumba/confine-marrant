<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c1"
    tools:context=".view.activities.MainActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/smile"
        android:id="@+id/imgLogo"
        android:adjustViewBounds="true"
        app:lottie_repeatMode="restart"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/M5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lineBottom"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/M3"
            android:fontFamily="@font/carter_one"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textSize="@dimen/P12" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/M2"
            android:fontFamily="@font/comfortaa"
            android:text="by EssengoGroup"
            android:textAlignment="center"
            android:textAppearance="?android:textAppearance"
            android:textColor="@color/c4"
            android:textSize="@dimen/P5" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="@dimen/T1"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/chargement"
            app:lottie_autoPlay="true"
            app:lottie_repeatMode="restart"
            android:id="@+id/chargement"/>

    </LinearLayout>
</RelativeLayout>