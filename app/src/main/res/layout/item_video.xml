<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardVideo"
    app:cardCornerRadius="@dimen/M3"
    app:cardElevation="@dimen/M3"
    app:cardMaxElevation="@dimen/M5"
    android:layout_margin="@dimen/M2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/M3"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:id="@+id/lineTop">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="@dimen/M15"
                android:layout_height="@dimen/M15"
                android:id="@+id/imgUser"
                app:civ_border_color="@color/c5"
                app:civ_border_width="1dp"
                android:src="@drawable/default_user"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pseudo"
                android:id="@+id/pseudoUser"
                android:layout_weight="1"
                android:textAppearance="?android:textAppearance"
                android:fontFamily="@font/cantora_one"
                android:layout_marginStart="@dimen/M3"/>
            <TextView
                android:layout_width="@dimen/T9"
                android:layout_height="wrap_content"
                android:text="date"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/P3"
                android:id="@+id/datePoster"
                android:textAppearance="?android:textAppearance"
                android:fontFamily="@font/cantora_one"
                android:layout_marginStart="@dimen/M3"/>
        </LinearLayout>

        <com.borjabravo.readmoretextview.ReadMoreTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt"
            android:layout_below="@id/lineTop"
            android:textAppearance="?android:textAppearance"
            android:layout_margin="@dimen/M3"
            app:trimExpandedText="Voir plus"
            app:trimCollapsedText=" Voir moins"
            app:trimMode="trimModeLine"
            app:trimLines="6"
            app:colorClickableText="@color/colorPrimary"
            android:fontFamily="@font/cantora_one"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/T10"
            android:layout_below="@+id/txt">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_above="@id/lineBottom">
                <VideoView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/video"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_launcher_background"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/lineBottom"
                android:layout_alignParentBottom="true">
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/partager"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_reply_black_24dp"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/txtDownload"
                        android:layout_gravity="center"
                        android:textAppearance="?android:textAppearance"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/M2"
                        android:id="@+id/imgDownload"
                        android:src="@drawable/ic_file_download_black_24dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/txtCmt"
                        android:layout_gravity="center"
                        android:textAppearance="?android:textAppearance"/>
                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:transitionName="logo_image"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/comment"
                        app:lottie_autoPlay="true"
                        android:id="@+id/imgCmt"
                        android:layout_margin="@dimen/M2"
                        android:adjustViewBounds="true"
                        app:lottie_repeatMode="restart"
                        android:layout_alignParentTop="true"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/txtLikes"
                        android:layout_gravity="center"
                        android:textAppearance="?android:textAppearance"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/M2"
                        android:id="@+id/imgLikes"
                        android:src="@drawable/ic_favorite_border_black_24dp"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>